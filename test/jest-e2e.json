{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@db/db": "<rootDir>/../libs/db/src",
    "@db/db/(.*)": "<rootDir>/../libs/db/src/$1",
    "@events": "<rootDir>/../libs/events/src",
    "@events/(.*)": "<rootDir>/../libs/events/src/$1"
  }
}
