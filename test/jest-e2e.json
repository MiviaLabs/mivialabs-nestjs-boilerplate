{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "testTimeout": 120000,
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@db(|/.*)$": "<rootDir>/../libs/db/src/$1",
    "^@email(|/.*)$": "<rootDir>/../libs/email/src/$1",
    "^@events(|/.*)$": "<rootDir>/../libs/events/src/$1",
    "^@storage(|/.*)$": "<rootDir>/../libs/storage/src/$1"
  },
  "globalSetup": "./global-setup.ts",
  "globalTeardown": "./global-teardown.ts",
  "maxWorkers": 1,
  "forceExit": true,
  "detectOpenHandles": true
}